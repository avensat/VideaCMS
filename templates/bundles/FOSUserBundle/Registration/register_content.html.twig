{% trans_default_domain 'FOSUserBundle' %}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Inscription</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('dist/styles/Front/style.css') }}">
</head>
<body>
<div class="register-container">
    <div class="left-column">
        <img class="logo"
             src="data:image/svg+xml;utf8;base64,"/>
        <img class="left-column-img"
             src="https://images.unsplash.com/photo-1487611459768-bd414656ea10?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=6492053f1a3187e3596132f5857917b4&auto=format&fit=crop&w=1950&q=80"
             alt="">
    </div>
    <div class="right-column">
        <div class="d-flex flex-column">
            <div class="singlepage-text">
                Cr√©er un compte
            </div>
            {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register register-form'}}) }}
                <div class="form-group">
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'form.email'|trans}}) }}
                </div>

                <div class="form-group">
                {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'form.username'|trans}}) }}
                </div>

                <div class="form-group">
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'form.password'|trans}}) }}
                </div>

                <div class="form-group">
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'form.password_confirmation'|trans}}) }}
                </div>

                {{ form_rest(form) }}

                <div class="form-group">
                    <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-outline-light"/>
                </div>
            {{ form_end(form) }}
            <a class="btn btn-primary singlepage-btn" href="{{ path("front_homepage") }}">Retour</a>
        </div>
    </div>
</div>
</body>
</html>

<style>
    body {
        margin: inherit;
    }

    .logo {
        position: absolute;
        z-index: 1;
        top: 35vh;
        left: 35vh;
    }

    .register-container {
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: space-between;
    }

    .left-column {
        width: 100%;
        height: 100vh;
        overflow: hidden;
    }

    .left-column-img {
        width: 100%;
        height: 100vh;
        object-fit: cover;
        transform: scale(1.1);
        filter: blur(2px) brightness(50%);
    }

    .right-column {
        background-color: #15A9E9;
        width: 100%;
        height: 100vh;
    }

    .register-form {
        margin-top: 25vh;
        color: #ffff;
        transform: translateY(-50%);
        width: 50vh;
        margin-left: auto;
        margin-right: auto;
    }
</style>
