{% extends "front/layout.html.twig" %}

{% block title %}Vid√©os - {% endblock %}

{% block mainContent %}
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-md-2 mb-4">
                <div class="card">
                    <div class="card-header fs-header">
                        <i class="far fa-video mr-2"></i> <span>{{ video.title }}</span>
                    </div>
                    <div class="card-body">
                        <div id="ytplayer" class="ytvideo"></div>
                    </div>
                    <div class="card-footer">
                        <i class="far fa-thumbs-up"></i> {{ getLikeCountForId(video.urlId) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Load the IFrame Player API code asynchronously.
        var tag = document.createElement('script');
        tag.src = "https://www.youtube.com/player_api";
        var firstScriptTag = document.getElementsByTagName('script')[0];
        firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

        var player;

        function onYouTubePlayerAPIReady() {
            player = new YT.Player('ytplayer', {
                height: '360',
                width: '640',
                videoId: '{{ video.urlId }}'
            });
        }
    </script>
{% endblock %}