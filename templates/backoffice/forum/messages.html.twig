{% extends 'backoffice/layout.html.twig' %}
{% block title %}Messages{% endblock %}
{% block body %}
    <div class="title">Messages</div>
    <div class="card top">
        <div class="card-body">
            <table class="table">
                <thead class="thead-dark">
                <tr>
                    <th scope="col">Sujet</th>
                    <th scope="col">Auteur</th>
                    <th scope="col">Création</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                {% for message in messages %}
                    <tr>
                        <td><a href="">{{ message.thread.title }}</a></td>
                        <td>{{ message.user.username }}</td>
                        <td>{{ message.createdAt|date("d/m/y à H:i") }}</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="{{ path("thread_show", {"id": message.thread.id}) }}" class="btn btn-secondary"><i class="fal fa-eye"></i></a>
                                <a href="{{ path("message_edit", {"id": message.id}) }}" class="btn btn-secondary"><i class="fal fa-edit"></i></a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">Pas de messages</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="navigation">
        {{ knp_pagination_render(messages) }}
    </div>
{% endblock %}