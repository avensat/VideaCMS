{% extends 'backoffice/layout.html.twig' %}
{% block title %}Vidéos locales{% endblock %}
{% block body %}
    <div class="title">Vidéos locales</div>
    <div class="card top">
        <div class="card-body">
            <table class="table">
                <thead class="thead-dark">
                <tr>
                    <th scope="col">Titre</th>
                    <th scope="col">Likes</th>
                    <th scope="col">Visibilité</th>
                    <th scope="col">Utilisateur</th>
                    <th scope="col">Date d'ajout</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                {% for video in videos %}
                    <tr>
                        <td><a href="">{{ video.title }}</a></td>
                        <td>{{ video.likes }}</td>
                        <td>{{ video.public }}</td>
                        <td>{{ video.user.username }}</td>
                        <td>{{ video.createdAt|date("d/m/y à H:i") }}</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="" class="btn btn-secondary"><i class="fal fa-eye"></i></a>
                                <a href="{{ path("backoffice_videos_hosted_edit", {"id": video.id}) }}" class="btn btn-secondary"><i class="fal fa-edit"></i></a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">Pas de vidéos</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="navigation">
        {{ knp_pagination_render(videos) }}
    </div>
{% endblock %}