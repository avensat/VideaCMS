{% extends template_service.getTemplate() ~ "/front/layout.html.twig" %}

{% block title %}Editer mon message{% endblock %}

{% block mainContent %}
    <div class="container">
        <div class="card">
            <div class="card-body">
                <div class="subtitle">Editer mon message</div>
                {{ include('message/_form.html.twig', {'button_label': 'Editer'}) }}

                <div style="text-align: right;">
                    <a class="btn btn-secondary" href="{{ path('thread_show', {'id': message.thread.id}) }}">Retour</a>
                </div>
            </div>
        </div>
    </div>


{% endblock %}