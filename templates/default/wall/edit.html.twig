{% extends template_service.getTemplate() ~ "/front/layout.html.twig" %}

{% block title %}Editer ma publication{% endblock %}

{% block mainContent %}
    <div class="container wall">
        <a class="btn btn-secondary" href="{{ path('wall_index') }}">Retour</a>
        <br><br>
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-7">
                        {{ include('default/wall/_form.html.twig', {'button_label': 'Modifier'}) }}
                    </div>
                    <div class="col-md-5" style="text-align: center">
                        <p>Supprimer cette publication ?</p>
                        {{ include('default/wall/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
        <div style="height: 100px"></div>
    </div>
{% endblock %}