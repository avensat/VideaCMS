{% trans_default_domain 'FOSUserBundle' %}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('dist/styles/Front/style.css') }}">
</head>
<body>
<div class="login-container">
    <div class="left-column">
        <img class="logo"
             src="data:image/svg+xml;utf8;base64,"/>
        <img class="left-column-img"
             src="https://images.unsplash.com/photo-1487611459768-bd414656ea10?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=6492053f1a3187e3596132f5857917b4&auto=format&fit=crop&w=1950&q=80"
             alt="">
    </div>
    <div class="right-column">
        <div class="d-flex flex-column">
            <div class="singlepage-text">
                Connexion
            </div>
            <form action="{{ path("fos_user_security_check") }}" method="post" class="login-form">
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}

                <div class="form-group">
                    <input type="text" id="username" name="_username" value="{{ last_username }}"
                           required="required" autocomplete="username" class="form-control"
                           placeholder="{{ 'security.login.username'|trans }}"/>
                </div>

                <div class="form-group">
                    <input type="password" id="password" name="_password"
                           required="required" autocomplete="current-password" class="form-control"
                           placeholder="{{ 'security.login.password'|trans }}"/>
                </div>

                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="remember_me" name="_remember_me" value="on" />
                    <label class="form-check-label" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                </div>
                <br>

                <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"
                       class="btn btn-outline-light align-self-end" />
            </form>
            <a class="btn btn-primary singlepage-btn" href="{{ path("front_homepage") }}">Retour</a>
        </div>

    </div>
</div>
</body>
</html>

<style>
    body {
        margin: inherit;
    }

    .logo {
        position: absolute;
        z-index: 1;
        top: 35vh;
        left: 35vh;
    }

    .login-container {
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: space-between;
    }

    .left-column {
        width: 100%;
        height: 100vh;
        overflow: hidden;
    }

    .left-column-img {
        width: 100%;
        height: 100vh;
        object-fit: cover;
        transform: scale(1.1);
        filter: blur(2px) brightness(50%);
    }

    .right-column {
        background-color: #E71D36;
        width: 100%;
        height: 100vh;
    }

    .login-form {
        margin-top: 25vh;
        color: #ffff;
        transform: translateY(-50%);
        width: 50vh;
        margin-left: auto;
        margin-right: auto;
    }
</style>
