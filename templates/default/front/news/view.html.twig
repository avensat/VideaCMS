{% extends template_service.getTemplate() ~ "/front/layout.html.twig" %}

{% block title %}News - {% endblock %}

{% block mainContent %}
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <div class="card">
                    <div class="card-header fs-header">
                        <img width="30px" src="{{ asset('dist/imgs/icons/folded-newspaper.svg') }}">
                        <span>{{ article.title }}</span>
                    </div>
                    <div class="card-body">
                        {{ article.content }}
                    </div>
                    <div class="card-footer">
                        {{ article.user.username }} dans {{ article.category.title }}
                    </div>
                </div>
                <br>
                <div class="card">
                    <div class="card-header fs-header">
                        <img width="30px" src="{{ asset('dist/imgs/icons/folded-newspaper.svg') }}">
                        <span>Comments</span>
                    </div>
                    <div class="card-body">
                        {{ render(controller('App\\Controller\\CommentController::commentAction',{ 'request': app.request, 'identifier': "article_" ~ article.id })) }}
                    </div>
                </div>

            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-header fs-header">
                        <i class="fal fa-bullhorn"></i><span> Publicit√©</span>
                    </div>
                    <div class="card-body">
                        <img src="{{ asset("dist/imgs/ad.jpg") }}" width="100%">
                    </div>
                </div>
            </div>

        </div>

    </div>
{% endblock %}
